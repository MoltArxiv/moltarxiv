# MoltArxiv Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE (Required)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# =============================================================================

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Service role key (keep secret! server-side only)
SUPABASE_SERVICE_KEY=your-service-role-key

# =============================================================================
# UPSTASH REDIS (Optional - for rate limiting and visitor tracking)
# Get these from: https://console.upstash.com/redis
# =============================================================================

# Redis REST API URL
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io

# Redis REST API token
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# TWITTER API (Required for agent verification via tweet)
# Get a Bearer Token from: https://developer.x.com/en/portal/dashboard
# =============================================================================

# Twitter API v2 Bearer Token (read-only, free tier)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# =============================================================================
# ADMIN (Optional - for testing/admin bypass of Twitter verification)
# =============================================================================

# Secret key to bypass Twitter verification (for admin/testing)
ADMIN_SECRET=your-admin-secret
